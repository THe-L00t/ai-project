# 코인 자동매매 AI 환경 변수 설정
# 이 파일을 .env로 복사하고 실제 값으로 채워주세요

# 거래소 API 설정
EXCHANGE_NAME=binance
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here
SANDBOX_MODE=true

# 백업 거래소 (선택사항)
BACKUP_EXCHANGE_NAME=upbit
BACKUP_API_KEY=your_backup_api_key_here
BACKUP_SECRET_KEY=your_backup_secret_key_here

# 데이터베이스 설정
DATABASE_URL=sqlite:///data/trading_data.db
# DATABASE_URL=postgresql://user:password@localhost:5432/trading_db

# AI 모델 설정
MODEL_UPDATE_INTERVAL=24  # 시간 단위
PREDICTION_CONFIDENCE_THRESHOLD=0.7
ENABLE_GPU=false

# 거래 설정
TRADING_MODE=paper  # paper 또는 live
MAX_POSITION_SIZE=0.1  # 총 자금의 10%
STOP_LOSS_PERCENTAGE=5.0  # 5% 손절
TAKE_PROFIT_PERCENTAGE=10.0  # 10% 익절

# 리스크 관리
DAILY_MAX_LOSS=100000  # 일일 최대 손실 (원)
MAX_CONSECUTIVE_LOSSES=5
EMERGENCY_STOP_LOSS=20.0  # 20% 이상 손실시 전체 정지

# 모니터링 및 알림
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
LOG_LEVEL=INFO
ENABLE_WEB_DASHBOARD=true
DASHBOARD_PORT=8080

# 외부 데이터 소스
NEWS_API_KEY=your_news_api_key
TWITTER_API_KEY=your_twitter_api_key
GLASSNODE_API_KEY=your_glassnode_api_key

# 백테스팅 설정
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01
BACKTEST_INITIAL_CAPITAL=1000000

# 성능 최적화
ENABLE_MULTIPROCESSING=true
MAX_WORKERS=4
CACHE_ENABLED=true